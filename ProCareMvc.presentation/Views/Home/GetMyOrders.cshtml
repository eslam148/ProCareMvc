@model List<ProCareMvc.Database.Entity.Order>
@{
    ViewData["Title"] = "My Orders";
}
<h1>My Orders</h1>
<p>Here are your orders:</p>
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.DateOrder.ToString("MM/dd/yyyy")</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.Status</td>
                <td><a class=" btn btn-primary" asp-controller="Home" asp-action="GetMyOrdersById" asp-route-id="@order.Id">Details</a></td>
            </tr>
        }
    </tbody>
