@model ProCareMvc.presentation.Models.OrderVM

@{
    ViewData["Title"] = "CreateQueryForOrderWhichDoctorSubscriped";
}
<br />
<br />

<div class="container mt-5">
    <div class="row mb-4 align-items-center">
        <div class="col-md-12 text-center">
            <h2 class="text-primary fw-bold">
                <i class="fa fa-file-medical me-2"></i> Create Query For Order Which Doctor Subscribed
            </h2>
            <p class="text-muted">Fill out the form below to create a new order query.</p>
        </div>
    </div>

    <div class="card shadow-lg border-0 mx-auto" style="max-width: 700px; border-radius: 20px;">
        <div class="card-body px-4 py-4 bg-light" style="border-radius: 20px;">
            <h4 class="text-center mb-4">Order Information</h4>
            <form asp-action="CreateQueryForOrderWhichDoctorSubscriped">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                @* ------------------------------------------- *@
                <div class="form-group mb-3">
                    <label asp-for="PatientId" class="form-label"></label>
                    <input value="@Model.Patient.User.FirstName + @Model.Patient.User.LastName" 
                            class="form-control" readonly />
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

            @* ------------------------------------------- *@

                <div class="form-group mb-3">
                    <label asp-for="PatientId" class="form-label"></label>
                    <input asp-for="PatientId" type="hidden" />
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

            @* ------------------------------------------- *@

                <div class="form-group mb-3">
                    <label asp-for="PatientId" class="form-label"></label>
                    <input asp-for="PatientId" class="form-control" readonly />
                    <span asp-validation-for="PatientId" class="text-danger"></span>
                </div>

            @* ------------------------------- correct from here  -------------------------------------- *@

                <div class="form-group mb-3">
                    <label asp-for="PaymentMethod" class="form-label"></label>
                    <input asp-for="PaymentMethod" class="form-control" placeholder="Enter Payment Method" />
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TotalPrice" class="form-label"></label>
                    <input asp-for="TotalPrice" class="form-control" placeholder="Enter Total Price" />
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DateOrder" class="form-label"></label>
                    <input asp-for="DateOrder" class="form-control" type="date" />
                    <span asp-validation-for="DateOrder" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <input asp-for="Status" class="form-control" placeholder="Enter Order Status" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Create" class="btn btn-primary shadow rounded-pill px-4 py-2" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="ShowListOfOrderWhichDoctorSubscribed" class="btn btn-danger shadow rounded-pill px-4 py-2">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
