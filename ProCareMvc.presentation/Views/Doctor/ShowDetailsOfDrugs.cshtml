@model ProCareMvc.presentation.Models.DrugsVM

@{
    ViewData["Title"] = "Drug Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4 py-4 px-4">
                    <h3 class="mb-0">
                        <i class="fa fa-medkit me-2"></i> Drug Details
                    </h3>
                </div>
                <div class="card-body px-4 py-4">
                    <div class="row mb-3">
                        <div class="col-md-6 mb-3">
                            <label class="fw-semibold">Name</label>
                            <div class="form-control-plaintext">@Model.Name</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-semibold">Description</label>
                            <div class="form-control-plaintext">@Model.Description</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-semibold">Price</label>
                            <div class="form-control-plaintext">@Model.Price.ToString("C")</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-semibold">Stock Quantity</label>
                            <div class="form-control-plaintext">@Model.StockQuantity</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-semibold">Active Ingredient</label>
                            <div class="form-control-plaintext">@Model.ActiveIngredient</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="fw-semibold">Active Ingredient Concentration</label>
                            <div class="form-control-plaintext">@Model.ActiveIngredientConcentration</div>
                        </div>
                        <div class="col-md-12">
                            <label class="fw-semibold">Hospital Name</label>
                            <div class="form-control-plaintext">@Model.Hospital?.Name</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="EditQuereyOfDrugs" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="fa fa-edit me-1"></i> Edit
                        </a>
                        <a asp-action="ShowDrugsList" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
