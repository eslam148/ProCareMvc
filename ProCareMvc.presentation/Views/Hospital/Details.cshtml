@model ProCareMvc.presentation.Models.HospitalVM

@{
    ViewData["Title"] = "Hospital Details";
}
<br /><br />
<div class="container mt-5">
    <div class="row mb-4 align-items-center">
        <div class="col-md-12 text-center">
            <h2 class="text-primary fw-bold">
                <i class="fa fa-hospital-o me-2"></i> Hospital Details
            </h2>
            <p class="text-muted">Below is the detailed information about the hospital.</p>
        </div>
    </div>

    <div class="card shadow-lg border-0 mx-auto" style="max-width: 700px; border-radius: 20px;">
        <div class="card-body px-4 py-4 bg-light" style="border-radius: 20px;">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th scope="row" style="width: 150px;">Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th scope="row">Address</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <th scope="row">Phone</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>@Model.Email</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success shadow rounded-pill px-4 py-2 me-2">
            <i class="fa fa-edit"></i> Edit
        </a>

        <a asp-action="Index" class="btn btn-danger shadow rounded-pill px-4 py-2">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
