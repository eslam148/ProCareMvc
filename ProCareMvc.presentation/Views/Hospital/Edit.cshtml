@model ProCareMvc.presentation.Models.HospitalVM

@{
    ViewData["Title"] = "Edit Hospital";
}
<br />
<br />

<div class="container mt-5">
    <div class="row mb-4 align-items-center">
        <div class="col-md-12 text-center">
            <h2 class="text-primary fw-bold">
                <i class="fa fa-hospital-o me-2"></i> Edit Hospital
            </h2>
            <p class="text-muted">Update the hospital details below.</p>
        </div>
    </div>

    <div class="card shadow-lg border-0 mx-auto" style="max-width: 700px; border-radius: 20px;">
        <div class="card-body px-4 py-4 bg-light" style="border-radius: 20px;">
            <h4 class="text-center mb-4">Hospital Information</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Hospital Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter Email Address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 text-center">
                    <button type="submit" class="btn btn-primary shadow rounded-pill px-4 py-2">
                        <i class="fa fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-danger shadow rounded-pill px-4 py-2">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
