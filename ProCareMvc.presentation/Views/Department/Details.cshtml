@model ProCareMvc.presentation.Models.DepartmentVM

@{
    ViewData["Title"] = "Details";
}
<br />
<br />
<br />
<br />
<h1 class="my-4">Department Details</h1>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Field</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><label asp-for="Name"></label></td>
            <td><span asp-for="Name">@Model.Name</span></td>
        </tr>
        <tr>
            <td><label asp-for="ManagerId"></label></td>
            <td><span asp-for="ManagerId">@Model.ManagerId</span></td>
        </tr>
        <tr>
            <td><label asp-for="HospitalId"></label></td>
            <td><span asp-for="HospitalId">@Model.HospitalId</span></td>
        </tr>
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
