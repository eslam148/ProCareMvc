@model ProCareMvc.presentation.Models.DepartmentVM

@{
    ViewData["Title"] = "Department Details";
}
<br />
<br />
<div class="container mt-5">
    <div class="row mb-4 align-items-center">
        <div class="col-md-12 text-center">
            <h2 class="text-primary fw-bold">
                <i class="fa fa-building me-2"></i> Department Details
            </h2>
            <p class="text-muted">Below is the detailed information about the department.</p>
        </div>
    </div>

    <div class="card shadow-lg border-0 mx-auto" style="max-width: 700px; border-radius: 20px;">
        <div class="card-body px-4 py-4 bg-light" style="border-radius: 20px;">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th scope="row" style="width: 150px;">Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th scope="row">Manager</th>
                        @* <td>@Model.ManagerId</td> *@
                        <td>@(Model.DoctorObj?.User?.FirstName+ " " +Model.DoctorObj?.User?.LastName)</td>
                    </tr>
                    <tr>
                        <th scope="row">Hospital</th>
                        <td>@Model.Hospital.Name</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success shadow rounded-pill px-4 py-2 me-2">
            <i class="fa fa-edit"></i> Edit
        </a>

        <a asp-action="Index" class="btn btn-danger shadow rounded-pill px-4 py-2">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>
