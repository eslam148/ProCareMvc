@model ProCareMvc.presentation.Models.DepartmentVM

@{
    ViewData["Title"] = "Create";
}
<br />
<br />

<div class="container mt-5">
    <div class="row mb-4 align-items-center">
        <div class="col-md-12 text-center">
            <h2 class="text-primary fw-bold">
                <i class="fa fa-building-o me-2"></i> Create Department
            </h2>
            <p class="text-muted">Fill out the form below to create a new department record.</p>
        </div>
    </div>

    <div class="card shadow-lg border-0 mx-auto" style="max-width: 700px; border-radius: 20px;">
        <div class="card-body px-4 py-4 bg-light" style="border-radius: 20px;">
            <h4 class="text-center mb-4">Department Information</h4>
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Department Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

              @*   <div class="form-group mb-3">
                    <label asp-for="ManagerId" class="form-label">Manager</label>
                    <select asp-for="ManagerId" class="form-control">
                        <option value="">-- Select Manager --</option>
                        @if (Model.Doctors != null)
                        {
                            foreach (var doctor in Model.Doctors)
                            {
                                <option value="@doctor.Id">@doctor?.FirstName + @doctor?.LastName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div> *@

                <div class="form-group mb-3">
                    <label asp-for="HospitalId" class="form-label">Hospital</label>
                    <select asp-for="HospitalId" class="form-control">
                        <option value="">-- Select Hospital --</option>
                        @if (Model.Hospitals != null)
                        {
                            foreach (var hospital in Model.Hospitals)
                            {
                                <option value="@hospital.Id">@hospital.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="HospitalId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 text-center">
                    <input type="submit" value="Create" class="btn btn-primary shadow rounded-pill px-4 py-2" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-danger shadow rounded-pill px-4 py-2">
            <i class="fa fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
