@model ProCareMvc.presentation.Models.DepartmentVM

@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<br />
<br />

<div class="container mt-5">
    <h1>Create Department</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ManagerId" class="control-label">Manager</label>
                    <select asp-for="ManagerId" class="form-control">
                        <option value="">-- Select Manager --</option>
                        @if (Model.Doctors != null)
                        {
                            foreach (var doctor in Model.Doctors)
                            {
                                <option value="@doctor.Id">@doctor?.FirstName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="HospitalId" class="control-label">Hospital</label>
                    <select asp-for="HospitalId" class="form-control">
                        <option value="">-- Select Hospital --</option>
                        @if (Model.Hospitals != null)
                        {
                            foreach (var hospital in Model.Hospitals)
                            {
                                <option value="@hospital.Id">@hospital.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="HospitalId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}