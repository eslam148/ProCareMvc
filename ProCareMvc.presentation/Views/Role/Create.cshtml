@model ProCareMvc.presentation.ViewModels.AddRoleViewModel

@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_RoleLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-5 shadow" style="border-radius:10px;">
            <div class="card-body">
                <h3 class="text-center text-primary">Add New Role</h3>
                <p class="text-muted text-center">Please Enter Role Name</p>

                <form id="createRoleForm" asp-action="Create" method="post">
                    <div class="form-group mb-3">
                        <label for="RoleName" class="fw-bold">Role Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            <input asp-for="RoleName" class="form-control" placeholder="Enter Role Name" required />
                        </div>
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                        <button type="submit" class="btn btn-primary">Add Role</button>
                    </div>
                </form>
                <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
            </div>
        </div>
    </div>
</div>
