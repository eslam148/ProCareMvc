@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container" style="margin-top: 8%; margin-bottom: 8%;">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Card Container -->
            <div class="card border-0 rounded-5 shadow-lg p-5" style="max-width: 700px;">
                <div class="card-body">
                    <h3 class="text-center mb-4" style="font-size: 22px;">Forgot Your Password?</h3>

                    <form asp-action="ForgetPassword" method="post" novalidate>
                        @* <div asp-validation-summary="All" class="alert alert-danger"></div> *@

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label" style="font-size: 20px;">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger small" style="font-size: 12px;"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3" style="font-size: 14px;">Send Reset Link</button>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-action="Login" class="text-muted" style="font-size: 14px;">Back to login</a>
                    </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</section>

<partial name="_ValidationScriptsPartial" />

<style>
 
    .card {
        background-color: #f8f9fa;
        border-radius: 20px;
        transition: box-shadow 0.3s ease-in-out;
        padding: 3rem;
        max-width: 700px; 
    }

        .card:hover {
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        }

    .card-body {
        padding: 2rem;
    }

    .form-control {
        border-radius: 20px;
        padding: 12px;
    }

       

    .btn {
        background-color: #007bff;
        border-radius: 20px;
        font-size: 14px;
        /* font-weight: bold; */
        padding: 12px;
    }

    .btn:hover {
       background-color: #0036b3;
}
</style>
