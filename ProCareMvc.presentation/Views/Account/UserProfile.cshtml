@section Scripts {
    <script>
        $(document).ready(function () {
            $('#uploadForm').submit(function (e) {
                e.preventDefault();

                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("UploadProfileImage", "Account")',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function () {
                        $('#uploadStatus').text("Uploaded successfully!");

                        setTimeout(function () {
                            $('#uploadModal').modal('hide');
                            location.reload();
                        }, 1000);
                    },
                    error: function () {
                        $('#uploadStatus').text("Error while uploading.").addClass("text-danger");
                    }
                });
            });
        });
    </script>
}

